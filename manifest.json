{
  "manifest_version": 3,
  "name": "Global Cart",
  "description": "Store all shopping items from multiple sites in one cart",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "pages/index.html",
    "default_icon": {
      "32": "assets/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
